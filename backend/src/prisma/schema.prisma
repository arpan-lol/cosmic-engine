generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TitleSource {
  USER_PROVIDED
  USER_EDITED
  AI_GENERATED
  DEFAULT
}

model User {
  id           Int       @id @default(autoincrement())
  googleId     String?   @unique
  email        String    @unique
  name         String
  picture      String?
  refreshToken String?
  password     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sessions     Session[]
}

model Session {
  id          String      @id @default(uuid())
  userId      Int
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String?
  titleSource TitleSource @default(DEFAULT)
  chats       Chat[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Chat {
  id          String             @id @default(uuid())
  sessionId   String
  session     Session            @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role        String             // 'user' | 'assistant' | 'system'
  content     String             @db.Text
  attachments ChatAttachment[]
  tokens      Int?
  createdAt   DateTime           @default(now())
  timeMetrics TimeMetrics?
}

model TimeMetrics {
  id                  String  @id @default(uuid())
  chatId              String  @unique
  chat                Chat    @relation(fields: [chatId], references: [id], onDelete: Cascade)
  totalRequestMs      Int
  queryExpansionMs    Int?
  retrievalMs         Int?
  embeddingMs         Int?
  vectorSearchMs      Int?
  bm25SearchMs        Int?
  rankingMs           Int?
  hydrationMs         Int?
  perAttachmentMs     Json?
  promptBuildingMs    Int?
  firstTokenMs        Int?
  streamingMs         Int?
  total   Int?
  createdAt           DateTime @default(now())

  isCached            Boolean @default(false)
  cachedQuery         String?
  cachedAttachmentNames String[]
  cachedOptions       Json?

  @@index([chatId])
}

model Attachment {
  id              String           @id @default(uuid())
  sessionId       String
  type            String
  url             String
  filename        String
  mimeType        String
  size            Int
  metadata        Json?
  createdAt       DateTime         @default(now())
  bm25indexStatus String?
  bm25indexedAt   DateTime?
  bm25Meta        BM25IndexMeta?
  bm25Entries     BM25IndexEntry[]
  chats           ChatAttachment[]
}

model ChatAttachment {
  id           String     @id @default(uuid())
  chatId       String
  attachmentId String
  chat         Chat       @relation(fields: [chatId], references: [id], onDelete: Cascade)
  attachment   Attachment @relation(fields: [attachmentId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([chatId, attachmentId])
  @@index([chatId])
  @@index([attachmentId])
}

model BM25IndexMeta {
  attachmentId   String     @id
  attachment     Attachment @relation(fields: [attachmentId], references: [id], onDelete: Cascade)
  totalDocs      Int
  avgChunkLength Float
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model BM25IndexEntry {
  id             String     @id @default(uuid())
  attachmentId   String
  attachment     Attachment @relation(fields: [attachmentId], references: [id], onDelete: Cascade)
  chunkIndex     Int
  term           String
  tf             Int
  df             Int
  chunkLength    Int
  avgChunkLength Float
  totalDocs      Int
  createdAt      DateTime   @default(now())

  @@index([attachmentId, term])
  @@index([attachmentId, chunkIndex])
}

model QueryRequestCache {
  id           String   @id @default(cuid())

  cacheKey     String   @unique
  sessionId    String

  query        String
  attachments  String[]        
  options      Json           

  assistantMessageId String?

  createdAt    DateTime @default(now())
  lastSeenAt   DateTime @updatedAt

  @@index([sessionId])
}
